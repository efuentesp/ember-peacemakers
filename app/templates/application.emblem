#page

  header
    .container
      #menu.navbar.navbar-inverse.navbar-fixed-top
        .container-fluid
          .navbar-header
            button.navbar-toggle data-toggle="collapse" data-target=".navbar-collapse"
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand href="/" Peacemakers
          .navbar-collapse.collapse
            ul.nav.navbar-nav
              li.nav.active
                link-to "index"
                  i.fa.fa-home
                  |  Inicio
              li.nav
                link-to "schools"
                  i.fa.fa-bell-o
                  |  Escuelas
              li.nav
                link-to "setup"
                  i.fa.fa-cog
                  |  Configuración
            ul.nav.navbar-nav.navbar-right
              if session.isAuthenticated
                li.dropdown
                  a.dropdown-toggle href="#" data-toggle="dropdown"
                    i.fa.fa-user
                    |  Usuario 
                    b.caret
                  ul.dropdown-menu
                    li
                      a href="#" Action
                    li
                      a href="#" Action
                    li
                      a href="#" Action
                    li.divider
                    li
                      a href="#" Action
                li
                  a href="#"
                    i.fa.fa-power-off
                    |  Salir
              else
                li.dropdown
                  a.dropdown-toggle href="#" data-toggle="dropdown"
                    i.fa.fa-user
                    |  Usuario
                    b.caret
                    ul.dropdown-menu
                      li
                        .navbar-content
                          .row
                            .col-md-5
                              img.img-responsive.img-circle src="http://api.randomuser.me/portraits/men/49.jpg"
                              p.text-center.small
                                a href="#" Cambiar Foto
                            .col-md-7
                              span Nombre del Usuario
                              p.text-muted.small mail.gmail.com
                              .divider
                              a.btn.btn-primary.btn-sm.active Ver Perfil
                        .navbar-footer
                          .navbar-footer-content
                            .row
                              .col-md-6
                                a.btn.btn-default.btn-sm Cambiar Contraseña
                li
                  link-to 'login'
                    i.fa.fa-sign-in
                    |  Entrar

  section#body
    section#main
      = outlet

  br
  br
  br
  hr

  footer
    .container
      span
        p.text-muted
