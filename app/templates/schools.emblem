.container
  .row
    span.col-md-12
      ol.breadcrumb
        li
          link-to "application"
            | Inicio
        li.active Escuelas

  .row
    .col-md-8
      h2#title
        i.fa.fa-bell-o
        |  Escuelas
    .col-md-4
      .pull-right style="margin-top:20px;"
